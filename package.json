{
  "name": "optimal",
  "version": "0.14.0",
  "description": "Options object builder and validator.",
  "main": "./lib/index.js",
  "scripts": {
    "babel": "build-lib",
    "coverage": "run-coverage",
    "eslint": "run-linter",
    "flow": "type-check",
    "jest": "run-tests",
    "posttest": "yarn run flow",
    "pretest": "yarn run eslint",
    "preversion": "yarn test",
    "test": "yarn run jest",
    "postversion": "yarn run babel"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/milesj/optimal.git"
  },
  "keywords": [
    "opts",
    "options",
    "builder",
    "validator",
    "config",
    "defaults",
    "object",
    "params"
  ],
  "author": {
    "name": "Miles Johnson",
    "url": "http://milesj.me"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/milesj/optimal/issues"
  },
  "homepage": "https://github.com/milesj/optimal#readme",
  "dependencies": {
    "babel-runtime": "^6.26.0"
  },
  "devDependencies": {
    "@milesj/build-tool-config": "^0.50.0"
  },
  "babel": {
    "presets": "@milesj/build-tool-config/babel"
  },
  "eslintConfig": {
    "extends": "./node_modules/@milesj/build-tool-config/eslint.js",
    "rules": {
      "flowtype/no-weak-types": 0
    }
  },
  "eslintIgnore": [
    "esm/",
    "lib/",
    "*.min.js",
    "*.map"
  ]
}
