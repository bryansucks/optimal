{
  "name": "optimal",
  "version": "0.14.0",
  "description": "Options object builder and validator.",
  "main": "./lib/index.js",
  "module": "./esm/index.js",
  "scripts": {
    "build": "beemo typescript",
    "build:dts": "beemo run-script generate-dts",
    "coverage": "yarn run jest --coverage",
    "eslint": "beemo eslint",
    "type": "beemo typescript --noEmit",
    "jest": "beemo jest",
    "prettier": "beemo prettier",
    "posttest": "yarn run eslint --silent",
    "pretest": "yarn run type --silent",
    "preversion": "yarn test",
    "test": "yarn run jest --silent",
    "postversion": "yarn run build && yarn run build:dts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/milesj/optimal.git"
  },
  "keywords": [
    "opts",
    "options",
    "builder",
    "validator",
    "config",
    "defaults",
    "object",
    "params"
  ],
  "author": {
    "name": "Miles Johnson",
    "url": "http://milesj.me"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/milesj/optimal/issues"
  },
  "homepage": "https://github.com/milesj/optimal#readme",
  "dependencies": {
    "babel-runtime": "^6.26.0"
  },
  "devDependencies": {
    "@milesj/build-tool-config": "^0.75.1"
  },
  "beemo": {
    "module": "@milesj/build-tool-config",
    "drivers": [
      "babel",
      "eslint",
      "jest",
      "prettier",
      "typescript"
    ]
  }
}
