{
  "name": "optimal",
  "version": "0.14.0",
  "description": "Options object builder and validator.",
  "main": "./lib/index.js",
  "module": "./esm/index.js",
  "scripts": {
    "babel": "yarn run babel:cjs && yarn run babel:esm",
    "coverage": "yarn run jest --coverage",
    "eslint": "beemo eslint --color --report-unused-disable-directives --typescript --ext .ts,.js ./src ./tests",
    "type": "beemo typescript",
    "jest": "beemo jest --colors --logHeapUsage",
    "prettier": "beemo prettier --write ./README.md \"./{bin,src,tests}/**/*.{ts,js}\" \"./*.{md,json}\"",
    "posttest": "yarn run type --silent",
    "pretest": "yarn run eslint --silent",
    "preversion": "yarn test",
    "test": "yarn run jest --silent",
    "postversion": "yarn run babel"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/milesj/optimal.git"
  },
  "keywords": [
    "opts",
    "options",
    "builder",
    "validator",
    "config",
    "defaults",
    "object",
    "params"
  ],
  "author": {
    "name": "Miles Johnson",
    "url": "http://milesj.me"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/milesj/optimal/issues"
  },
  "homepage": "https://github.com/milesj/optimal#readme",
  "dependencies": {
    "babel-runtime": "^6.26.0"
  },
  "devDependencies": {
    "@milesj/build-tool-config": "^0.70.0"
  },
  "beemo": {
    "module": "@milesj/build-tool-config",
    "drivers": [
      "babel",
      "eslint",
      "jest",
      "prettier",
      "typescript"
    ],
    "typescript": {
      "compilerOptions": {
        "lib": ["ESNext"]
      }
    }
  }
}
