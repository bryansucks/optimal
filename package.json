{
  "name": "optimal",
  "version": "0.14.0",
  "description": "Options object builder and validator.",
  "main": "./lib/index.js",
  "scripts": {
    "babel": "beemo babel ./src --out-dir ./lib",
    "coverage": "beemo jest --coverage",
    "eslint": "beemo eslint",
    "flow": "beemo flow check",
    "jest": "beemo jest",
    "prettier": "beemo prettier ./src",
    "posttest": "yarn run flow",
    "pretest": "yarn run eslint",
    "preversion": "yarn test",
    "test": "yarn run jest",
    "postversion": "yarn run babel"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/milesj/optimal.git"
  },
  "keywords": [
    "opts",
    "options",
    "builder",
    "validator",
    "config",
    "defaults",
    "object",
    "params"
  ],
  "author": {
    "name": "Miles Johnson",
    "url": "http://milesj.me"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/milesj/optimal/issues"
  },
  "homepage": "https://github.com/milesj/optimal#readme",
  "dependencies": {
    "babel-runtime": "^6.26.0"
  },
  "devDependencies": {
    "@beemo/cli": "^0.3.0",
    "@milesj/build-tool-config": "^0.53.0"
  },
  "beemo": {
    "config": "@milesj/build-tool-config",
    "drivers": [
      "babel",
      "eslint",
      "flow",
      "jest",
      "prettier"
    ],
    "eslint": {
      "rules": {
        "flowtype/no-weak-types": 0
      }
    }
  },
  "eslintIgnore": [
    "esm/",
    "lib/",
    "*.min.js",
    "*.map"
  ]
}
